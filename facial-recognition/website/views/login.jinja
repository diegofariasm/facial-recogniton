{% extends "base.jinja" %}
{% block title %}
Entrar
{% endblock %}

{% block body %}


<form method="POST">

    {{ form.hidden_tag() }}


    <div class="mb3">

        {{ form.email.label(
        class="form-label"
        ) }}

        {{form.email(
        class="form-control"
        ) }}

    </div>

    <div class="mb3">

        {{ form.password.label(
        class = "form-label"
        ) }}

        {{form.password(
        class="form-control"
        ) }}

    </div>
    <br>
    {{form.submit(
    class="btn btn-primary"
    )}}

</form>

{% endblock %}
